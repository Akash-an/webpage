<?php

$conn = new mysqli('localhost','securega','password','pos') or die("could not connect".$conn->connect_error);

$sql = "create table client_details(
	c_id int(10) unique auto_increment,
	c_name varchar(20),
	c_logo varchar(50),
	c_url varchar(50),
	primary key(c_id)
)";

if($conn->query($sql)===false)
	die("error creating table".$conn->error);

?>
